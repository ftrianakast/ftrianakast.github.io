---
import '../styles/global.css';
import { t, getLangFromUrl, getLocalizedPath } from '../i18n';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import LanguagePersistence from '../components/LanguagePersistence.astro';

interface Props {
  title: string;
  description?: string;
}

const currentLang = getLangFromUrl(Astro.url);
const { title, description = t(currentLang, 'meta.defaultDescription') } = Astro.props;
---

<!DOCTYPE html>
<html lang={currentLang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Macondo&family=Lora:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen">
  <LanguagePersistence />
  <nav class="fixed top-0 w-full parchment backdrop-blur-md z-50 border-b-2 border-[--color-gold]" style="border-bottom-color: var(--color-gold);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-6">
          <a href={getLocalizedPath('/', currentLang)} class="font-macondo text-2xl text-ink hover:text-[--color-gold] transition-colors" style="color: var(--color-ink);">
            FT
          </a>
          <div class="hidden md:block">
            <LanguageSwitcher />
          </div>
        </div>

        <div class="hidden md:flex space-x-8">
          <a href={getLocalizedPath('/', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.home')}</a>
          <a href={getLocalizedPath('/about', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.about')}</a>
          <a href={getLocalizedPath('/work', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.work')}</a>
          <a href={getLocalizedPath('/music', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.music')}</a>
          <a href={getLocalizedPath('/blog', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.blog')}</a>
          <a href={getLocalizedPath('/contact', currentLang)} class="font-macondo hover:text-[--color-gold] transition-colors" style="color: var(--color-ink-light);">{t(currentLang, 'nav.contact')}</a>
        </div>

        <!-- Mobile language switcher and menu button -->
        <div class="md:hidden flex items-center gap-4">
          <LanguageSwitcher />
          <button id="mobile-menu-button" class="p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden pb-4">
        <a href={getLocalizedPath('/', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.home')}</a>
        <a href={getLocalizedPath('/about', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.about')}</a>
        <a href={getLocalizedPath('/work', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.work')}</a>
        <a href={getLocalizedPath('/music', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.music')}</a>
        <a href={getLocalizedPath('/blog', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.blog')}</a>
        <a href={getLocalizedPath('/contact', currentLang)} class="block py-2 font-macondo hover:text-[--color-gold]" style="color: var(--color-ink-light);">{t(currentLang, 'nav.contact')}</a>
      </div>
    </div>
  </nav>

  <main class="pt-16">
    <slot />
  </main>

  <footer class="border-t-2" style="background-color: var(--color-ink); border-top-color: var(--color-gold); color: var(--color-parchment);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-macondo text-xl mb-4" style="color: var(--color-gold);">{t(currentLang, 'footer.title')}</h3>
          <p class="text-sm">{t(currentLang, 'footer.subtitle')}</p>
          <p class="text-sm">{t(currentLang, 'footer.location')}</p>
        </div>
        <div>
          <h3 class="font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'footer.quickLinks')}</h3>
          <div class="flex flex-col space-y-2 text-sm">
            <a href={getLocalizedPath('/about', currentLang)} class="hover:text-[--color-gold] transition-colors">{t(currentLang, 'nav.about')}</a>
            <a href={getLocalizedPath('/work', currentLang)} class="hover:text-[--color-gold] transition-colors">{t(currentLang, 'nav.work')}</a>
            <a href={getLocalizedPath('/blog', currentLang)} class="hover:text-[--color-gold] transition-colors">{t(currentLang, 'nav.blog')}</a>
          </div>
        </div>
        <div>
          <h3 class="font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'footer.connect')}</h3>
          <div class="flex flex-col space-y-2 text-sm">
            <a href="https://github.com/ftrianakast" target="_blank" class="hover:text-[--color-gold] transition-colors">GitHub</a>
            <a href="https://linkedin.com/in/ftrianakast" target="_blank" class="hover:text-[--color-gold] transition-colors">LinkedIn</a>
            <a href="mailto:ftrianakast@gmail.com" class="hover:text-[--color-gold] transition-colors">Email</a>
          </div>
        </div>
      </div>
      <div class="ornamental-divider mt-8 mb-8"></div>
      <div class="text-center text-sm">
        <p>&copy; {new Date().getFullYear()} Felipe Triana Casta√±eda</p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
