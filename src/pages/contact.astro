---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, getLangFromUrl, getLocalizedPath, getCvUrl } from '../i18n';

const currentLang = getLangFromUrl(Astro.url);
---

<BaseLayout title={t(currentLang, 'contact.title')}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl md:text-5xl font-macondo mb-4" style="color: var(--color-ink);">{t(currentLang, 'contact.heading')}</h1>
    <p class="text-xl mb-16" style="color: var(--color-ink-light);">{t(currentLang, 'contact.subtitle')}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
      <!-- Email -->
      <a href="mailto:ftrianakast@gmail.com" class="group card-hover block rounded-lg p-4">
        <div class="flex items-start mb-3">
          <svg class="w-6 h-6 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <div>
            <h3 class="font-macondo text-xl mb-1" style="color: var(--color-ink);">{t(currentLang, 'contact.methods.email.title')}</h3>
            <p class="mb-1" style="color: var(--color-gold);">{t(currentLang, 'contact.methods.email.value')}</p>
            <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.methods.email.description')}</p>
          </div>
        </div>
      </a>

      <!-- GitHub -->
      <a href="https://github.com/ftrianakast" target="_blank" class="group card-hover block rounded-lg p-4">
        <div class="flex items-start mb-3">
          <svg class="w-6 h-6 mr-3 mt-1" fill="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          <div>
            <h3 class="font-macondo text-xl mb-1" style="color: var(--color-ink);">{t(currentLang, 'contact.methods.github.title')}</h3>
            <p class="mb-1" style="color: var(--color-gold);">{t(currentLang, 'contact.methods.github.value')}</p>
            <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.methods.github.description')}</p>
          </div>
        </div>
      </a>

      <!-- LinkedIn -->
      <a href="https://linkedin.com/in/ftrianakast" target="_blank" class="group card-hover block rounded-lg p-4">
        <div class="flex items-start mb-3">
          <svg class="w-6 h-6 mr-3 mt-1" fill="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <div>
            <h3 class="font-macondo text-xl mb-1" style="color: var(--color-ink);">{t(currentLang, 'contact.methods.linkedin.title')}</h3>
            <p class="mb-1" style="color: var(--color-gold);">{t(currentLang, 'contact.methods.linkedin.value')}</p>
            <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.methods.linkedin.description')}</p>
          </div>
        </div>
      </a>

      <!-- Location -->
      <div>
        <div class="flex items-start mb-3">
          <svg class="w-6 h-6 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <div>
            <h3 class="font-macondo text-xl mb-1" style="color: var(--color-ink);">{t(currentLang, 'contact.methods.location.title')}</h3>
            <p class="mb-1" style="color: var(--color-gold);">{t(currentLang, 'contact.methods.location.value')}</p>
            <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.methods.location.description')}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="ornamental-divider mb-12"></div>

    <!-- CV Download -->
    <div class="mb-12 text-center">
      <a href={getCvUrl(currentLang)} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 transition-all hover:scale-105">
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span class="font-macondo text-lg" style="color: var(--color-gold);">{t(currentLang, 'contact.downloadCV')}</span>
      </a>
    </div>

    <div class="ornamental-divider mb-12"></div>

    <!-- What I'm interested in -->
    <div class="mb-16">
      <h2 class="text-2xl font-macondo mb-8" style="color: var(--color-gold);">{t(currentLang, 'contact.lookingFor.title')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-macondo mb-2 flex items-center" style="color: var(--color-ink);">
            <span class="w-2 h-2 rounded-full mr-2" style="background-color: var(--color-gold);"></span>
            {t(currentLang, 'contact.lookingFor.remote.title')}
          </h3>
          <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.lookingFor.remote.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo mb-2 flex items-center" style="color: var(--color-ink);">
            <span class="w-2 h-2 rounded-full mr-2" style="background-color: var(--color-gold);"></span>
            {t(currentLang, 'contact.lookingFor.discussions.title')}
          </h3>
          <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.lookingFor.discussions.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo mb-2 flex items-center" style="color: var(--color-ink);">
            <span class="w-2 h-2 rounded-full mr-2" style="background-color: var(--color-gold);"></span>
            {t(currentLang, 'contact.lookingFor.speaking.title')}
          </h3>
          <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.lookingFor.speaking.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo mb-2 flex items-center" style="color: var(--color-ink);">
            <span class="w-2 h-2 rounded-full mr-2" style="background-color: var(--color-gold);"></span>
            {t(currentLang, 'contact.lookingFor.collaborations.title')}
          </h3>
          <p class="text-sm" style="color: var(--color-ink-light);">{t(currentLang, 'contact.lookingFor.collaborations.description')}</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
