---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, getLangFromUrl, getLocalizedPath } from '../i18n';

const currentLang = getLangFromUrl(Astro.url);
---

<BaseLayout title={t(currentLang, 'home.title')}>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center parchment relative overflow-hidden">
    <!-- Decorative corner ornaments -->
    <div class="absolute top-4 left-4 text-4xl opacity-20" style="color: var(--color-gold);">✦</div>
    <div class="absolute top-4 right-4 text-4xl opacity-20" style="color: var(--color-gold);">✦</div>
    <div class="absolute bottom-4 left-4 text-4xl opacity-20" style="color: var(--color-gold);">✦</div>
    <div class="absolute bottom-4 right-4 text-4xl opacity-20" style="color: var(--color-gold);">✦</div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <h1 class="text-6xl md:text-8xl font-macondo mb-6" style="color: var(--color-ink);">
          {t(currentLang, 'home.hero.name')}
        </h1>
        <div class="ornamental-divider mb-6 max-w-md mx-auto"></div>
        <p class="text-2xl md:text-3xl font-macondo mb-4" style="color: var(--color-ink-light);">
          {t(currentLang, 'home.hero.title')}
        </p>
        <p class="text-xl mb-8" style="color: var(--color-ink-light);">
          {t(currentLang, 'home.hero.tagline')}
        </p>

        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <a href={getLocalizedPath('/work', currentLang)} class="btn-primary px-8 py-3 rounded-lg font-medium">
            {t(currentLang, 'home.hero.viewWork')}
          </a>
          <a href={getLocalizedPath('/contact', currentLang)} class="px-8 py-3 border-2 rounded-lg font-medium transition-all" style="border-color: var(--color-ink); color: var(--color-ink);" onmouseover="this.style.borderColor='var(--color-gold)'; this.style.color='var(--color-gold)'; this.style.boxShadow='0 4px 8px rgba(201, 169, 97, 0.3)'; this.style.transform='translateY(-2px)'" onmouseout="this.style.borderColor='var(--color-ink)'; this.style.color='var(--color-ink)'; this.style.boxShadow='none'; this.style.transform='translateY(0)'">
            {t(currentLang, 'home.hero.getInTouch')}
          </a>
          <a href={`/cv/felipe-triana-cv-${currentLang}.pdf`} download class="inline-flex items-center gap-2 px-8 py-3 border-2 rounded-lg font-medium transition-all" style="border-color: var(--color-gold); color: var(--color-gold);" onmouseover="this.style.backgroundColor='var(--color-gold)'; this.style.color='var(--color-parchment)'; this.style.boxShadow='0 4px 8px rgba(201, 169, 97, 0.3)'; this.style.transform='translateY(-2px)'" onmouseout="this.style.backgroundColor='transparent'; this.style.color='var(--color-gold)'; this.style.boxShadow='none'; this.style.transform='translateY(0)'">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            {t(currentLang, 'home.hero.downloadCV')}
          </a>
        </div>

        <div class="flex justify-center gap-6">
          <a href="https://github.com/ftrianakast" target="_blank" class="social-icon" style="color: var(--color-ink-light);">
            <span class="sr-only">GitHub</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
          <a href="https://linkedin.com/in/ftrianakast" target="_blank" class="social-icon" style="color: var(--color-ink-light);">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="mailto:ftrianakast@gmail.com" class="social-icon" style="color: var(--color-ink-light);">
            <span class="sr-only">Email</span>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Highlights Section -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl md:text-5xl font-macondo text-center mb-4" style="color: var(--color-ink);">{t(currentLang, 'home.highlights.title')}</h2>
      <div class="ornamental-divider mb-16 max-w-md mx-auto"></div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="text-center">
          <h3 class="text-xl font-macondo mb-3" style="color: var(--color-gold);">{t(currentLang, 'home.highlights.engineering.title')}</h3>
          <p style="color: var(--color-ink-light);">{t(currentLang, 'home.highlights.engineering.description')}</p>
        </div>

        <div class="text-center">
          <h3 class="text-xl font-macondo mb-3" style="color: var(--color-gold);">{t(currentLang, 'home.highlights.ai.title')}</h3>
          <p style="color: var(--color-ink-light);">{t(currentLang, 'home.highlights.ai.description')}</p>
        </div>

        <div class="text-center">
          <h3 class="text-xl font-macondo mb-3" style="color: var(--color-gold);">{t(currentLang, 'home.highlights.music.title')}</h3>
          <p style="color: var(--color-ink-light);">{t(currentLang, 'home.highlights.music.description')}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="pt-20 pb-16 relative" style="background-color: var(--color-ink);">
    <div class="absolute inset-0 opacity-10" style="background-image: repeating-linear-gradient(45deg, var(--color-gold) 0, var(--color-gold) 1px, transparent 0, transparent 50%); background-size: 10px 10px;"></div>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-4xl md:text-5xl font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'home.cta.title')}</h2>
      <div class="ornamental-divider mb-8 max-w-md mx-auto"></div>
      <p class="text-xl mb-8" style="color: var(--color-parchment);">
        {t(currentLang, 'home.cta.description')}
      </p>
      <a href={getLocalizedPath('/contact', currentLang)} class="btn-primary inline-block px-8 py-3 rounded-lg font-medium">
        {t(currentLang, 'home.cta.button')}
      </a>
    </div>
  </section>
</BaseLayout>
