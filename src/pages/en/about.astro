---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t, getLangFromUrl, getLocalizedPath } from '../../i18n';

const currentLang = getLangFromUrl(Astro.url);
---

<BaseLayout title={t(currentLang, 'about.title')}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl md:text-5xl font-macondo mb-8">{t(currentLang, 'about.heading')}</h1>

    <div class="prose prose-lg max-w-none">
      <div class="mb-12">
        <h2 class="text-2xl font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'about.journey.title')}</h2>
        <p class="text-slate-600 leading-relaxed mb-4" set:html={t(currentLang, 'about.journey.p1')}>
        </p>
        <p class="text-slate-600 leading-relaxed mb-4" set:html={t(currentLang, 'about.journey.p2')}>
        </p>
        <p class="text-slate-600 leading-relaxed" set:html={t(currentLang, 'about.journey.p3')}>
        </p>
      </div>

      <div class="mb-12">
        <h2 class="text-2xl font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'about.beyond.title')}</h2>
        <p class="text-slate-600 leading-relaxed" set:html={t(currentLang, 'about.beyond.p1')}>
        </p>
      </div>

      <div class="mb-12">
        <h2 class="text-2xl font-macondo mb-4" style="color: var(--color-gold);">{t(currentLang, 'about.values.title')}</h2>
        <ul class="list-disc list-inside space-y-2 text-slate-600">
          <li set:html={t(currentLang, 'about.values.learning')}></li>
          <li set:html={t(currentLang, 'about.values.scale')}></li>
          <li set:html={t(currentLang, 'about.values.ai')}></li>
          <li set:html={t(currentLang, 'about.values.bridges')}></li>
          <li set:html={t(currentLang, 'about.values.excellence')}></li>
        </ul>
      </div>

      <div class="ornamental-divider mb-8"></div>

      <div>
        <h2 class="text-2xl font-macondo mb-6" style="color: var(--color-gold);">{t(currentLang, 'about.currently.title')}</h2>
        <ul class="space-y-3" style="color: var(--color-ink-light);">
          <li class="flex items-start">
            <span class="w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--color-gold);"></span>
            <span>{t(currentLang, 'about.currently.ebay')}</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--color-gold);"></span>
            <span>{t(currentLang, 'about.currently.llm')}</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--color-gold);"></span>
            <span>{t(currentLang, 'about.currently.music')}</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--color-gold);"></span>
            <span>{t(currentLang, 'about.currently.german')}</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--color-gold);"></span>
            <span>{t(currentLang, 'about.currently.reading')}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
