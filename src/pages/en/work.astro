---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t, getLangFromUrl, getLocalizedPath } from '../../i18n';

const currentLang = getLangFromUrl(Astro.url);
---

<BaseLayout title={t(currentLang, 'work.title')}>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl md:text-5xl font-macondo mb-4">{t(currentLang, 'work.heading')}</h1>
    <p class="text-xl text-slate-600 mb-8">{t(currentLang, 'work.subtitle')}</p>

    <div class="mb-16">
      <a href={`/cv/felipe-triana-cv-${currentLang}.pdf`} download class="inline-flex items-center gap-3 transition-all hover:scale-105">
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-gold);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span class="font-macondo text-lg" style="color: var(--color-gold);">{t(currentLang, 'work.downloadCV')}</span>
      </a>
    </div>

    <!-- Timeline -->
    <div class="space-y-12">
      <!-- eBay Staff -->
      <div class="relative pl-8 border-l-2 border-amber-600">
        <div class="absolute w-4 h-4 bg-amber-600 rounded-full -left-[9px] top-1"></div>
        <div class="mb-1 text-sm text-slate-500">{t(currentLang, 'work.ebayStaff.dates')}</div>
        <h2 class="text-2xl font-macondo mb-1">{t(currentLang, 'work.ebayStaff.title')}</h2>
        <div class="text-lg text-amber-600 mb-4">{t(currentLang, 'work.ebayStaff.company')}</div>
        <ul class="space-y-2 text-slate-600 list-disc list-inside">
          {t(currentLang, 'work.ebayStaff.responsibilities').map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Java 17+</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Spring Boot</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Scala</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Kotlin</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">GraphQL</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Kafka</span>
          <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm">Kubernetes</span>
        </div>
      </div>

      <!-- eBay Senior -->
      <div class="relative pl-8 border-l-2 border-slate-300">
        <div class="absolute w-4 h-4 bg-slate-400 rounded-full -left-[9px] top-1"></div>
        <div class="mb-1 text-sm text-slate-500">{t(currentLang, 'work.ebaySenior.dates')}</div>
        <h2 class="text-2xl font-macondo mb-1">{t(currentLang, 'work.ebaySenior.title')}</h2>
        <div class="text-lg text-amber-600 mb-4">{t(currentLang, 'work.ebaySenior.company')}</div>
        <ul class="space-y-2 text-slate-600 list-disc list-inside">
          {t(currentLang, 'work.ebaySenior.responsibilities').map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Scala</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Java</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Microservices</span>
        </div>
      </div>

      <!-- Zalando -->
      <div class="relative pl-8 border-l-2 border-slate-300">
        <div class="absolute w-4 h-4 bg-slate-400 rounded-full -left-[9px] top-1"></div>
        <div class="mb-1 text-sm text-slate-500">{t(currentLang, 'work.zalando.dates')}</div>
        <h2 class="text-2xl font-macondo mb-1">{t(currentLang, 'work.zalando.title')}</h2>
        <div class="text-lg text-amber-600 mb-4">{t(currentLang, 'work.zalando.company')}</div>
        <ul class="space-y-2 text-slate-600 list-disc list-inside">
          {t(currentLang, 'work.zalando.responsibilities').map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Java 8</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Spring Boot</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">NodeJS</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">AWS</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Docker</span>
        </div>
      </div>

      <!-- Prodigious -->
      <div class="relative pl-8 border-l-2 border-slate-300">
        <div class="absolute w-4 h-4 bg-slate-400 rounded-full -left-[9px] top-1"></div>
        <div class="mb-1 text-sm text-slate-500">{t(currentLang, 'work.prodigious.dates')}</div>
        <h2 class="text-2xl font-macondo mb-1">{t(currentLang, 'work.prodigious.title')}</h2>
        <div class="text-lg text-amber-600 mb-4">{t(currentLang, 'work.prodigious.company')}</div>
        <ul class="space-y-2 text-slate-600 list-disc list-inside">
          {t(currentLang, 'work.prodigious.responsibilities').map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

      <!-- Aentropico -->
      <div class="relative pl-8 border-l-2 border-slate-300">
        <div class="absolute w-4 h-4 bg-slate-400 rounded-full -left-[9px] top-1"></div>
        <div class="mb-1 text-sm text-slate-500">{t(currentLang, 'work.aentropico.dates')}</div>
        <h2 class="text-2xl font-macondo mb-1">{t(currentLang, 'work.aentropico.title')}</h2>
        <div class="text-lg text-amber-600 mb-4">{t(currentLang, 'work.aentropico.company')}</div>
        <ul class="space-y-2 text-slate-600 list-disc list-inside">
          {t(currentLang, 'work.aentropico.responsibilities').map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Scala</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Akka</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Spark</span>
          <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">Machine Learning</span>
        </div>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="mt-20 pt-20 border-t-2 border-slate-200">
      <h2 class="text-3xl font-macondo mb-8" style="color: var(--color-gold);">{t(currentLang, 'work.skills.title')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.ai.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.ai.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.languages.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.languages.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.frameworks.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.frameworks.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.apis.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.apis.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.databases.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.databases.description')}</p>
        </div>
        <div>
          <h3 class="font-macondo text-lg mb-3" style="color: var(--color-gold);">{t(currentLang, 'work.skills.infrastructure.title')}</h3>
          <p class="text-slate-600">{t(currentLang, 'work.skills.infrastructure.description')}</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
